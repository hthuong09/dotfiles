[colors]
background=#3e3e3e
foreground=#ccc
icon-foreground=#673AB7
powermenu-foreground=#e60053
border-background=#40ffffff

[custom-scripts]
active-workspace=~/.bin/bar/active_workspace \#333 \#D1C4E9
pacman-update=~/.bin/bar/checkupdates \#673AB7

[bar/main]

;monitor = HDMI1

width=100%
height=24
;radius=5

background=${colors.background}
foreground=${colors.foreground}

font-0 = spectrum berry:size=8
font-1 = Wuncon Siji:pixelsize=10
font-2 = Termsynu:size=8
font-3 = Sazanami Mincho:size=8

modules-left = active-workspace workspaces mpd
modules-center = xwindow
modules-right = netspeed memory paupdate cpu xkeyboard battery volume wlan eth date powermenu

module-margin = 1

border-bottom-size = 2
border-bottom-color = ${colors.border-background}

tray-position = right
tray-padding = 2

padding-right = 2
wm-restack = bspwm

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/active-workspace]
type = custom/script
exec = ${custom-scripts.active-workspace}
tail = true

[module/workspaces]
type = custom/script
exec = ~/.bin/bar/workspace
tail = true

[module/powermenu]

type = custom/menu

format-spacing = 1

label-open = 
label-open-foreground = ${colors.powermenu-foreground}
label-close =  cancel
label-close-foreground = ${colors.powermenu-foreground}
label-separator = |
label-separator-foreground = ${colors.icon-foreground}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = reboot

menu-2-0 = power off
menu-2-0-exec = poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0



[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.icon-foreground}

label = %date% %time%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.icon-foreground}

[module/netspeed]
type = internal/network
interface = wlp3s0
interval = 1.0

format-connected = <label-connected>
format-connected-underline = #9f78e1
label-connected = %{F#444}%{F-} %upspeed%  %{F#444}%{F-} %downspeed%



format-disconnected =

[module/eth]
type = internal/network
interface = enp4s0
interval = 3.0

;format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.icon-foreground}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%
;label-volume-foreground =

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground = ${colors.icon-foreground}

label-muted =  %percentage%
label-muted-foreground = #99


[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.icon-foreground}
;format-prefix-underline = ${colors.secondary}

label-layout = %layout%
;label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
;label-indicator-background = ${colors.secondary}
;label-indicator-underline = ${colors.secondary}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0
full-at = 95

format-charging = <animation-charging> <label-charging>
;format-charging-underline = #ffb52a

format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.icon-foreground}
;format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.icon-foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.icon-foreground}
animation-charging-framerate = 750

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icon-foreground}
;format-underline =
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icon-foreground}
;format-underline = #4bffdc
label = %percentage_used%%

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

format-online = %{F#444}%{F-} <label-time>  <label-song>
format-playing = ${self.format-online}
format-paused =
format-stopped =
label-song = %artist% - %title%
label-time = %elapsed% / %total%

[module/paupdate]
type = custom/script
exec = ${custom-scripts.pacman-update}
tail = true

; vim:ft=dosini
